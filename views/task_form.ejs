<head>
     <!-- Font Icon -->
     <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

     <!-- Main css -->
     <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div class="main">
        <section class="task">
            <div class="container">
                <div class="task-content">
                    <div>
                    <h2 class="form-title">Create task</h2></div>
                        <form method="POST" action="/task_form" class="task-form" id="task-form">
                            <div class="form-group">
                                <label for="task_name"></label>
                                <input type="text" name="task_name" id="task_name" placeholder="Task Name"/>
                            </div>
                            <div class="form-group">
                                <label for="start_date"></label>
                                <input type="date" name="start_date" id="start_date" placeholder="Start date"/>
                            </div>
                            <div class="form-group">
                               <label for="end_date"></label>
                                <input type="date" name="end_date" id="end_date" placeholder="End date"/>
                            </div>
                            <div class="form-group">
                                <label for="stare"></label>
                                <input type="text" name="stare" id="stare" placeholder="Stare"/>
                            </div>
                            <div class="form-group">
                                <label for="descriere"></label>
                                <input type="text" name="descriere" id="descriere" placeholder="Descriere"/>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <a href="/task_form">
                                <input type="submit" name="done" id="done" class="form-submit" value="Done"/></a>
                                <a href="/home_manager">
                                <input  type="button" name="back" id="back" class="button2" value="Back"/></a>
                            </div>
                        </form>
                </div>
            </div>
        </section>
    </div>
</body>
